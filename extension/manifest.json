{
  "manifest_version": 3,
  "name": "Focus Analyzer",
  "version": "1.0.0",
  "description": "Track tab activity and analyze focus patterns with Gemini AI",
  "permissions": [
    "tabs",
    "storage"
  ],
  "background": {
    "service_worker": "background.js"
  },
  "action": {
    "default_popup": "popup.html",
    "default_title": "Focus Analyzer"
  }
}
